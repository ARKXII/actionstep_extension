{
  "manifest_version": 3,
  "name": "ActionStep Extension",
  "author": "Joshua Villalobos",
  "version": "1.0.0",
  "description": "Various Quality of Life upgrades for ActionStep",
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://ap-southeast-2.actionstepstaging.com/mym/asfw/settings/actions-list/edit/user_list_id/*"],
      "js": ["scripts/buttonClick.js","scripts/actionstep.js"]
    }
  ],
  "permissions": ["activeTab", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["toast.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
